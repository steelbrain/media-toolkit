{
  "name": "@steelbrain/media-toolkit",
  "version": "1.1.0",
  "description": "A collection of packages for manipulating media",
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all run build",
    "test": "yarn workspaces foreach --all run test",
    "lint": "yarn workspaces foreach --all run lint",
    "typecheck": "yarn workspaces foreach --all run typecheck",
    "lint:biome": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.0.15",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.9.2"
}
